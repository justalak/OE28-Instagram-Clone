<div class="modal fade" id="edit-comment" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalScrollableTitle">
          <%= t "edit" %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="text-center">
          <div class="form-group">
            <textarea class="form-control" id="comment-content"></textarea>
            </div>
            <button id="edit-submit" class="btn btn-primary ">
              <%= t "edit" %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
